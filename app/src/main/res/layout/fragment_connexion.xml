<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotPassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="#29abe2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_below="@+id/topText"
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/wave1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topText" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/presentation"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="connexion"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <EditText
            android:layout_gravity="center"
            android:id="@+id/inputEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_border"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:layout_below="@+id/topText"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:padding="16dp"
            tools:ignore="RtlCompat" />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/inputPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_border"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/topText"
            android:ems="10"
            android:hint="Password"
            android:inputType="text"
            android:padding="16dp"
            tools:ignore="RtlCompat" />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/inputstatut"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_border"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/topText"
            android:ems="10"
            android:hint="Statut"
            android:enabled="false"
            android:inputType="text"
            android:padding="16dp"
            tools:ignore="RtlCompat" />


        <Button
            android:layout_gravity="center"
            android:id="@+id/btnLogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounder_bg"
            android:text="LOGIN"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:backgroundTint="@color/colorPrimary"
            />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="mot de passe oubliÃ©?"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
        -->



    </LinearLayout>

</RelativeLayout>
